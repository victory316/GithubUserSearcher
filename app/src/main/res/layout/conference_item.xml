            android:background="@color/very_light_pink"/>
    </LinearLayout>

    <TextView
        android:id="@+id/current_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextStyle3"
        app:layout_constraintLeft_toLeftOf="@id/line_indicator"
        app:layout_constraintTop_toBottomOf="@id/room_location"
        app:layout_constraintBottom_toTopOf="@id/line_indicator"
        android:text="@string/current_time"/>

    <View
        android:id="@+id/line_indicator"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:background="@color/very_light_pink_two"
        app:layout_constraintLeft_toLeftOf="@id/timeline_view"
        app:layout_constraintBottom_toBottomOf="@id/timeline_view"/>

    <LinearLayout
        android:id="@+id/time_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/TextStyle4"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_weight="1"
